/* 视屏列表 */

.video_wrap{
  /* width: 50%; */
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  justify-content: space-between;
}
.video_item{
  width: 48%;
  margin-bottom: 20rpx;
  
}
.video_img{
  position: relative;
}
.video_img image{
  width:100%;
  display: flex;
  border-radius:16rpx;
}
.video_img .video_info{
  position: absolute;
  display: flex;
  justify-content: space-around;
  
  left: 0;
  bottom: 10rpx;
  width: 100%;
  color:#fff;
  font-size: 24rpx;
}
.video_title{
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp:2;
 -webkit-box-orient: vertical;
 font-size:28rpx;
}